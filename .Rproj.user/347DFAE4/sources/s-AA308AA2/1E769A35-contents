# save(nor_fullform_sent, file = "./data/nor_fullform_sent.rda")


lemma_adj_neg <- readLines("../norsentlex/Lemma/Lemma_ADJECTIVE_Negative_lexicon.txt")
lemma_adj_pos <- readLines("../norsentlex/Lemma/Lemma_ADJECTIVE_Positive_lexicon.txt")


lemma_noun_neg <- readLines("../norsentlex/Lemma/Lemma_NOUN_Negative_lexicon.txt")
lemma_noun_pos <- readLines("../norsentlex/Lemma/Lemma_NOUN_Positive_lexicon.txt")


lemma_padj_neg <- readLines("../norsentlex/Lemma/Lemma_PARTICIPLE_ADJECTIVE_Negative_lexicon.txt")
lemma_padj_pos <- readLines("../norsentlex/Lemma/Lemma_PARTICIPLE_ADJECTIVE_Positive_lexicon.txt")


lemma_verb_neg <- readLines("../norsentlex/Lemma/Lemma_VERB_Negative_lexicon.txt")
lemma_verb_pos <- readLines("../norsentlex/Lemma/Lemma_VERB_Positive_lexicon.txt")


nor_lemma_sent <- list(lemma_adj_neg,
                       lemma_adj_pos,
                       lemma_noun_neg,
                       lemma_noun_pos,
                       lemma_padj_neg,
                       lemma_padj_pos,
                       lemma_verb_neg,
                       lemma_verb_pos)

names(nor_lemma_sent) <- c("lemma_adj_negative", "lemma_adj_positive",
                           "lemma_noun_negative", "lemma_noun_positive",
                           "lemma_padj_negative", "lemma_padj_positive",
                           "lemma_verb_negative", "lemma_verb_positive")


save(nor_lemma_sent, file = "data/nor_lemma_sent.rda")
